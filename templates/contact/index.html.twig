{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}



{% block body %}
    <link rel="stylesheet" href="assets/contact.css">
        <div class="intro">
            <h1>Contact</h1>
            <p>Pour toute question, n'hésitez pas à nous contacter par mail ou par téléphone.</p>
        </div>
            <div class="tab">
                <div class="tab-content">
                   
                 
                
                    <form action="ajoutcontact" method="post">
                        <div class="form-group">
                            <label for="name">Nom</label>
                            <input type="text" class="form-control" id="name" name="name" value="{{ nom }} {{ prenom }}" required>
                        </div>
                        <div class="form-group">
                            <label for="email">Adresse email</label>
                            <input type="email" class="form-control" id="email" name="email" value="{{ app.user.email }}" required>
                        </div>
                        <div class="form-group">
                            <label for="subject">Sujet</label>
                            <input type="text" class="form-control" id="subject" name="subject" required>
                        </div>
                        <div class="form-group">
                            <label for="message">Message</label>
                            <textarea class="form-control" id="message" name="message" rows="5" required></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary">Envoyer</button>
                    </form>
                </div>
            </div>
      


 <div class="footer">
        <p>&copy; 2023 Camesthetique. Tous droits réservés.</p>
    </div>

{% endblock %}
